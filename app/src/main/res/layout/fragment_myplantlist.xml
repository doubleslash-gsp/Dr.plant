<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/plantList"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/plantListData"
        android:layout_width="300dp"
        android:layout_height="430dp"
        android:orientation="vertical"
        android:background="@drawable/plant_list_border">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/plant_list_border">
            <ImageView
                android:id="@+id/plantpic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/plant1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/plantname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="산토리니"
            android:textSize="17dp"
            android:padding="5dp"
            android:textColor="#3C3C3C"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="종류"
                android:textSize="14dp"
                android:textColor="#3C3C3C"/>
            <TextView
                android:id="@+id/plantkind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="28dp"
                android:text="산세베리아"
                android:textSize="14dp"
                android:textColor="#3C3C3C"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="물주기"
                android:textSize="14dp"
                android:textColor="#3C3C3C"/>
            <TextView
                android:id="@+id/plantwater"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="하루 1번 오후 3시 200ml씩"
                android:textSize="14dp"
                android:textColor="#3C3C3C"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnplantdiary"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/plantdiary_btn"
            android:scaleType="fitXY"
            android:background="#0000"/>

    </LinearLayout>

</LinearLayout>